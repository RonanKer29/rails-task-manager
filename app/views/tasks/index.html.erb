<h1>Tasks List: </h1>

<% @tasks.each do |task| %>
<div class="task-title">
  <%= check_box_tag "tasks[]", task.id, task.completed %>
  <%= link_to task.title, task_path(task) %>
  <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
<br>
<% end %>
<br>
<button type="button" class="btn btn-primary"><%= link_to "Add a new task", new_task_path, class: "color-white" %></button>
