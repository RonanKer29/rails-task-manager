<h1>Edit task</h1>

<%= form_with model: @task, html: { class: 'needs-validation' }, novalidate: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :details, class: 'form-label' %>
    <%= f.text_area :details, class: 'form-control', rows: 3 %>
  </div>

  <div class="mb-3 form-check">
    <%= f.label :completed, class: 'form-check-label' %>
    <%= f.check_box :completed, class: 'form-check-input' %>
  </div>

  <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
